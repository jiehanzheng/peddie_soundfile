<h1>New response</h1>

<%= form_for([@response.assignment.course, @response.assignment, @response]) do |f| %>
  <%= render 'form_errors' %>

  <div id="audio_file" class="field">
    <div id="soundfile_recorder"
         class="recorder" 
         data-blob-field-name="response[audio_file_io]">
      <div class="control">
        <button type="button" class="btn btn-primary record-stop-button">
          <div class="record-button">
            <span class="glyphicon glyphicon-record"></span>
            Record
          </div>
          <div class="stop-button">
            <span class="glyphicon glyphicon-stop"></span>
            Stop
          </div>
        </button>
      </div>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', course_assignment_responses_path %>
