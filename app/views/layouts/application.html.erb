<!DOCTYPE html>
<html>
<head>
  <title>PeddieSoundfile</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller] %> <%= params[:controller] %>_<%= params[:action] %>">

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#top_nav_items">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Sound File Manager", root_path, :class => 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="top_nav_items">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_user %>
            <%= link_to sessions_destroy_path, method: :post do %>
              <span class="glyphicon glyphicon-user"></span>
              Sign out <%= current_user.first_name %>
            <% end %>
          <% else %>
            <%= link_to '/auth/google_oauth2' do %>
              <span class="glyphicon glyphicon-user"></span>
              Sign in
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>


<div class="container">
  <%= breadcrumbs :style => :bootstrap %>

  <%= bootstrap_flash %>

  <%= yield %>

</div>

</body>
</html>
